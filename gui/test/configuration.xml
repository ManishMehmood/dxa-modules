    <include src="mocks/_config.xml"/>
    <resourceGroups>
        <resourceGroup name="Sdl.DitaDelivery.Test">
            <files>
                <file name="tests/components/AppComponent.js" />
                <file name="tests/components/PageComponent.js" />
                <file name="tests/components/TocComponent.js" />
                <file name="tests/DataStoreClient.js"/>
                <file name="tests/Server.js"/>
            </files>
            <dependencies>
                <dependency name="SDL.Client.Test.TestBase"/>
                <dependency name="SDL.Client.Test.Utilities"/>
                <dependency name="Sdl.DitaDelivery.Tests.Mocks"/>
                <dependency name="Sdl.DitaDelivery.Components"/>
                <dependency name="Sdl.DitaDelivery.DataStoreClient" />
                <dependency name="Sdl.DitaDelivery.LocalizationGlobalize" />
                <dependency name="Sdl.DitaDelivery.Resources"/>
                <dependency name="Sdl.DitaDelivery.RoutingClient" />
