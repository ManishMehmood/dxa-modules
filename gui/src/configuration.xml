<?xml version="1.0" encoding="utf-8" ?>
<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../node_modules/sdl-catalina/Common/Library/Core/configuration.xsd" merge="false">
    <appSettings>
        <!-- AUTO MANAGED BY THE BUILD -->
        <setting name="version" value="0.0.0" />
        <!-- AUTO MANAGED BY THE BUILD -->
        <setting name="coreVersion" value="0.0.0" />
        <setting name="corePath" value="SDL/Common/" />
        <setting name="debug" value="false" />
    </appSettings>
    <!-- Supported locales -->
    <locales>
        <locale>en</locale>
        <locale>nl</locale>
    </locales>
    <!-- Main Catalina config -->
    <include src="~/configuration.xml" />
    <!-- Main resources -->
    <resourceGroups>
        <resourceGroup name="Sdl.DitaDelivery">
            <files>
                <file name="stylesheets/main.css" />
                <file name="vendor.bundle.js" />
                <file name="main.bundle.js" />
            </files>
            <dependencies>
                <dependency name="Sdl.DitaDelivery.Dependencies" />
            </dependencies>
        </resourceGroup>
        <resourceGroup name="Sdl.DitaDelivery.Dependencies">
            <files>
                <file name="resources/resources.default.resjson" />
                <file name="resources/resources.{CULTURE}.resjson" />
            </files>
            <dependencies>
                <dependency name="SDL.Client.Libraries.SDL.Globalize" />
            </dependencies>
        </resourceGroup>
    </resourceGroups>
    <!-- Configuration for pages -->
    <pages baseUrl="/">
        <page url="*" resource="Sdl.DitaDelivery" title="SDL Dita Delivery" />
    </pages>
</configuration>
