<?xml version="1.0" encoding="utf-8" ?>
<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../node_modules/sdl-catalina/Common/Library/Core/configuration.xsd" merge="false">
    <appSettings>
        <!-- AUTO MANAGED BY THE BUILD -->
        <setting name="version" value="0.0.0" />
        <!-- AUTO MANAGED BY THE BUILD -->
        <setting name="coreVersion" value="0.0.0" />
        <setting name="corePath" value="SDL/Common/" />
        <setting name="debug" value="false" />
    </appSettings>
    <!-- Supported locales -->
    <locales>
        <locale>en</locale>
        <locale>nl</locale>
    </locales>
    <!-- Main Catalina config -->
    <include src="~/configuration.xml" />
    <include src="SDL/ReactComponents/configuration.xml" />
    <!-- Packages config -->
    <include src="packages.xml" />
    <!-- Child configs -->
    <include src="components/_config.xml" />
    <include src="global/_config.xml" />
    <include src="models/_config.xml" />
    <include src="resources/_config.xml" />
    <!-- Main resources -->
    <resourceGroups>
        <resourceGroup name="Sdl.DitaDelivery">
            <files>
                <file name="Index.js" />
            </files>
            <dependencies>
                <dependency name="Sdl.DitaDelivery.Components" />
                <dependency name="Sdl.DitaDelivery.DataStoreClient" />
                <dependency name="Sdl.DitaDelivery.LocalizationGlobalize" />
                <dependency name="Sdl.DitaDelivery.Resources" />
                <dependency name="Sdl.DitaDelivery.Routing" />
            </dependencies>
        </resourceGroup>
        <resourceGroup name="Sdl.DitaDelivery.Server">
            <files>
                <file name="Server.js"/>
            </files>
            <dependencies>
                <dependency name="Sdl.DitaDelivery.Components" />
                <dependency name="Sdl.DitaDelivery.DataStoreServer" />
            </dependencies>
        </resourceGroup>
        <resourceGroup name="Sdl.DitaDelivery.DitaOt.Styles">
            <files>
                <file name="dita-ot/styles/commonltr.css"/>
                <file name="dita-ot/styles/commonrtl.css"/>
            </files>
        </resourceGroup>
    </resourceGroups>
    <!-- Configuration for pages -->
    <pages baseUrl="/">
        <page url="*" resource="Sdl.DitaDelivery" title="SDL Dita Delivery" />
    </pages>
</configuration>
