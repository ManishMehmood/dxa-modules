<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="../node_modules/sdl-common-ui/Common/Library/Core/configuration.xsd" merge="false">

  <appSettings>
    <!-- AUTO MANAGED BY THE BUILD -->
    <setting name="version" value="0.0.0" />
  </appSettings>

  <!-- Main resources -->
  <resourceGroups>
    <resourceGroup name="ReactComponents.Index">
      <files>
        <file name="index.js" />
        <file name="styles/index.css"/>
      </files>
      <dependencies>
        <dependency name="ReactComponents.Components" />
      </dependencies>
    </resourceGroup>
  </resourceGroups>

  <!-- Configuration for pages -->
  <pages>
    <page url="*" resource="ReactComponents.Index" title="React Components" />
  </pages>
</configuration>
