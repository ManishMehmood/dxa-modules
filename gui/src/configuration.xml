<?xml version="1.0" encoding="utf-8" ?>
<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../node_modules/sdl-catalina/Common/Library/Core/configuration.xsd" merge="false">
    <appSettings>
        <!-- AUTO MANAGED BY THE BUILD -->
        <setting name="version" value="0.0.0" />
        <!-- AUTO MANAGED BY THE BUILD -->
        <setting name="coreVersion" value="0.0.0" />
        <setting name="corePath" value="SDL/Common/" />
        <setting name="debug" value="false" />
    </appSettings>
    <!-- Supported locales -->
    <locales>
        <locale>en</locale>
        <locale>nl</locale>
    </locales>
    <!-- Main Catalina config -->
    <include src="~/configuration.xml" />
    <include src="SDL/ReactComponents/configuration.xml" />
    <!-- Packages config -->
    <include src="packages.xml" />
    <!-- Child configs -->
    <include src="components/_config.xml" />
    <include src="models/_config.xml" />
    <include src="resources/_config.xml" />
    <!-- Main resources -->
    <resourceGroups>
        <resourceGroup name="Sdl.KcWebApp">
            <files>
                <file name="Index.js" />
            </files>
            <dependencies>
                <dependency name="Sdl.KcWebApp.Components" />
                <dependency name="Sdl.KcWebApp.DataStore" />
                <dependency name="Sdl.KcWebApp.Resources" />
            </dependencies>
        </resourceGroup>
        <resourceGroup name="Sdl.KcWebApp.DataStore">
            <files>
                <file name="DataStore.js" />
            </files>
            <dependencies>
                <dependency name="Sdl.KcWebApp.Models" />
            </dependencies>
        </resourceGroup>
        <resourceGroup name="Sdl.KcWebApp.Server">
            <files>
                <file name="Server.js"/>
            </files>
            <dependencies>
                <dependency name="Sdl.KcWebApp.Components" />
            </dependencies>
        </resourceGroup>
    </resourceGroups>
    <!-- Configuration for pages -->
    <pages baseUrl="/">
        <page url="*" resource="Sdl.KcWebApp" title="SDL Knowledge Center Documentation Portal" />
    </pages>
</configuration>
